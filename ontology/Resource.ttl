:entities
  a owl:ObjectProperty, owl:FunctionalProperty ;
  rdfs:label "Resources on"@en ;
  rdfs:comment "The topic of the discussion the Resource belongs to."@en ;
  rdfs:domain :Resource ;
  rdfs:range :Entity ;
  owl:inverseOf :about .

